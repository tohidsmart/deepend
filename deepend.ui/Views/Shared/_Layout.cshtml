<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Deepend Test</title>
    @Styles.Render("~/Content/css")

</head>
<body>

    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <!-- Brand/logo -->
        <a class="navbar-brand" href="#">
            <img src="~/fonts/img/mainlogo.png" alt="logo" style="width:40px;">
        </a>

        <!-- Links -->
        <ul class="navbar-nav">
            <li class="nav-item">
                <a href="#" class="nav-link">Deepend Application Test</a>
            </li>
            <li class="nav-item">
                @Html.ActionLink("Home", "Index", "Home",null,new {@class="nav-link"})
            </li>
            <li class="nav-item">
                @Html.ActionLink("Add Cheque", "Add", "Cheque",null, new { @class = "nav-link" })
            </li>
            
        </ul>
    </nav>
    
    <div class="container" style="margin-top:30px">

        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Deepend Application Test &copy; Tohid Azimi</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>



</html>
